[user]
	email = rmorgado@veniamworks.com
	name = Rodrigo Morgado
[alias]
	a = add
	br = branch
	ci = commit
	co = checkout
	cp = cherry-pick
	di = diff
	dis = diff --staged
	l = log
	lo = log --oneline
	s = status -sb
	st = status
	stt = status -uno
[commit]
	verbose = true
[push]
	default = current
[pull]
	default = current
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
[interactive]
	diffFilter = delta --color-only --features=interactive
[delta]
	features = decorations
	syntax-theme = Github
	dark = true
