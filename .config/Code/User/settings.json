{
    "cSpell.enabled": false,
    "editor.fontFamily": "Iosevka",
    "editor.fontWeight": "500",
    "editor.fontSize": 16,
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.fontLigatures": true,
    "editor.formatOnSave": false,
    "editor.lineNumbers": "relative",
    "editor.suggest.preview": true,
    "editor.scrollbar.vertical": "visible",
    "editor.peekWidgetDefaultFocus": "editor",
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "off"
    },
    "editor.scrollbar.verticalScrollbarSize": 8,
    "editor.renderWhitespace": "all",
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": false,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "terminal.integrated.fontSize": 18,
    "telemetry.telemetryLevel": "off",
    "window.autoDetectColorScheme": false,
    "window.menuBarVisibility": "toggle",
    "workbench.editor.untitled.hint": "hidden",
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Gruvbox Dark Medium",
    "workbench.preferredDarkColorTheme": "Gruvbox Dark Medium",
    "workbench.preferredLightColorTheme": "Gruvbox Light Medium",
    "workbench.iconTheme": "vs-seti",
    "workbench.sideBar.location": "right",

    // ---- Extensions ----
    "extensions.ignoreRecommendations": true,

    // Todo Tree
    "todo-tree.ripgrep.ripgrep": "/usr/bin/rg",
    "todo-tree.highlights.highlightDelay": 0,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "NOTE"
    ],
    "todo-tree.highlights.defaultHighlight": {
        "icon": "issue-opened",
        "type": "text",
        "iconColour": "yellow",
        "fontWeight": "bold",
        "opacity": 85
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            // "background": "#efef04",
            "foreground": "#AF3F99",
            "icon": "check-circle",
            "iconColour": "green",
            "textDecoration": "underline"
        },
        "FIXME": {
            // "background": "red",
            "foreground": "red",
            "iconColour": "red"
        },
        "NOTE": {
            "foreground": "green"
        }
    },

    // Vim
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.color": "rgba(255, 255, 0, 0.4)",
    "vim.highlightedyank.duration": 280,
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "~/.vimrc",
    "vim.foldfix": true,

    // Error Lens
    "errorLens.enabled": true,
    "errorLens.delay": 0,
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "info",
        "warning",
        "hint"
    ],

    // Clang-format
    "clang-format.executable": "/usr/local/bin/clang-format",
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },

    // ShellCheck
    "shellcheck.exclude": [
        "1090", // Disable ShellCheck can't follow source
        "2009", // Disable pgrep suggestion
        "2155",
        "3037", // Disable echo POSIX sh compliancy
        "3043",
        "3046", // Disable source POSIX sh compliancy
        "3057"],

    // Open in GitHub
    "openInGitHub.useLocalLine": true,
    "openInGitHub.useLocalRange": true,
    "gitlens.hovers.currentLine.over": "line",
}
